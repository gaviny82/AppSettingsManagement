<Window
    x:Class="AppSettingsManagementSample.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AppSettingsManagementSample"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel
        x:Name="panel"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Orientation="Vertical"
        Spacing="4">

        <Button Content="Reset all settings" Click="Reset_Click"/>
        <TextBlock Style="{ThemeResource BodyStrongTextBlockStyle}" Text="Account Information" />
        <TextBox
            PlaceholderText="Username"
            Text="{Binding Username, Mode=TwoWay}"
            ToolTipService.ToolTip="Account" />
        <TextBox
            PlaceholderText="Password"
            Text="{Binding Password, Mode=TwoWay}"
            ToolTipService.ToolTip="Password" />

    </StackPanel>
</Window>
